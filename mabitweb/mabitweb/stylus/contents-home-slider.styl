gris-oscuro = #29292D

.Slider
      background gris-oscuro
      padding 0
      margin 0
      &-container
        max-width 1024px
        margin 0 auto
           
.rslides
  position relative
  list-style none
  overflow hidden
  width 100%
  padding 0
  margin 0
  li
    -webkit-backface-visibility hidden
    position absolute
    display none
    width 100%
    left 0
    top 0
    &:first-child
      position relative
      display block
      float left
  img
    display block
    height auto
    float left
    width 100%
    border 0
  

